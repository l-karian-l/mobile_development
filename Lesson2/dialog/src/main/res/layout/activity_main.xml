<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="407dp"
        android:layout_height="692dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center"
            android:text="Alert Dialog"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="231dp"
            android:layout_height="63dp"
            android:layout_gravity="center"
            android:insetBottom="10dp"
            android:onClick="onClickShowDialog"
            android:text="Show Alert Dialog"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center"
            android:text="Snackbar"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="244dp"
            android:layout_height="63dp"
            android:layout_gravity="center"
            android:insetBottom="10dp"
            android:onClick="onClickShowSnackbar"
            android:text="Show Snackbar"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center"
            android:text="Time Picker Dialog"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_TimeDialog"
            android:layout_width="286dp"
            android:layout_height="63dp"
            android:layout_gravity="center"
            android:insetBottom="10dp"
            android:onClick="showTimePickerDialog"
            android:text="Show TimePickerDialog"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center"
            android:text="Date Picker Dialog"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="293dp"
            android:layout_height="63dp"
            android:layout_gravity="center"
            android:insetBottom="10dp"
            android:onClick="onDateShowDialog"
            android:text="Show DatePickerDialog"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center"
            android:text="Progress Dialog"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button6"
            android:layout_width="297dp"
            android:layout_height="63dp"
            android:layout_gravity="center"
            android:insetBottom="10dp"
            android:onClick="onShowProgressDialog"
            android:text="Show Progress Dialog"
            android:textSize="20sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>